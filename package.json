{
  "name": "todo-list-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc -b && vite build",
    "preview": "vite preview",
    "test": "jest"
  },
  "dependencies": {
    "pinia": "^2.1.7",
    "vue": "^3.4.31",
    "vue-router": "^4.0.13",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.8",
    "@vitejs/plugin-vue": "^5.0.5",
    "@vue/test-utils": "^2.4.6",
    "@vue/vue3-jest": "^29.2.6",
    "babel-jest": "^29.7.0",
    "eslint": "^9.7.0",
    "jest": "^29.7.0",
    "jest-transform-stub": "^2.0.0",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.3",
    "typescript": "^5.2.2",
    "vite": "^5.3.4",
    "vue-jest": "^3.0.7",
    "vue-tsc": "^2.0.24"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "vue"
    ],
    "transform": {
      "^.+\\.vue$": "vue-jest",
      "^.+\\.js$": "babel-jest",
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.tsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/(?!(string-width)/)"
    ],
    "testMatch": [
      "**/tests/unit/**/*.spec.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less|sass|scss)$": "jest-transform-stub"
    }
  }
}
